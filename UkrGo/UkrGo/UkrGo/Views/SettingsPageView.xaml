<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UkrGo.Views.SettingsPageView">
    <ContentPage.Content>
	        
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Text="Не показывать дубликаты" />
            <Switch Grid.Column="1" Grid.Row="0" IsToggled="{Binding RemoveDuplicate}" />
            <Label Grid.Column="0" Grid.Row="1" Text="Запрос PIN"  />
            <Switch Grid.Column="1" Grid.Row="1" IsToggled="{Binding AskPinCode}" />

        </Grid>
    </ContentPage.Content>
</ContentPage>